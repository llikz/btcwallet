<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <data>
    <variable
        name="viewModel"
        type="com.zac4j.zwallet.viewmodel.SendFundsViewModel"
        />
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <include
        android:id="@id/actionbar"
        layout="@layout/include_actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical"
        android:padding="@dimen/space.medium"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/send_funds_recipient_label"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space.small"
          android:hint="@string/send_funds_recipient_hint"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@id/send_funds_et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.recipientAddress}"
            android:inputType="text"
            app:error="@{viewModel.recipientAddressError}"
            app:addTextChangedListener="@{viewModel.recipientWatcher}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />
      </android.support.design.widget.TextInputLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space.medium"
          android:text="@string/send_funds_amount_label"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space.small"
          android:hint="@string/send_funds_amount_hint"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@id/send_funds_et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.sendAmount}"
            app:error="@{viewModel.sendAmountError}"
            app:addTextChangedListener="@{viewModel.amountWatcher}"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />
      </android.support.design.widget.TextInputLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space.medium"
          android:text="@string/send_funds_note_label"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space.small"
          android:hint="@string/send_funds_note_hint"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@id/send_funds_et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.noteMessage}"
            android:inputType="text"
            android:maxLength="25"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />
      </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:visibility="@{viewModel.progressVisibility}"
        style="@style/Widget.AppCompat.ProgressBar"
        />

    <Button
        android:id="@id/send_funds_btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="@{viewModel::onSendClick}"
        android:text="@string/send_funds_btn_label"
        style="@style/Widget.AppCompat.Button.Colored"
        />
  </RelativeLayout>
</layout>