<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>
    <variable
        name="viewModel"
        type="com.zac4j.zwallet.viewmodel.MainViewModel"
        />
  </data>

  <android.support.v4.widget.DrawerLayout
      android:id="@id/drawer_main_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <android.support.design.widget.AppBarLayout
          android:id="@id/appbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fitsSystemWindows="true"
          android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/header_height_main"
              >

            <TextView
                android:id="@id/main_tv_coin_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space.medium"
                android:text="@{viewModel.coinQuantity}"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white"
                tools:text="25,100 bits"
                />

            <TextView
                android:id="@id/main_tv_money_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_tv_coin_quantity"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/space.medium"
                android:text="@{viewModel.moneyAmount}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                tools:text="$6.58"
                />

          </RelativeLayout>

          <android.support.v7.widget.Toolbar
              android:id="@id/toolbar"
              android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"
              android:background="?attr/colorPrimary"
              android:fitsSystemWindows="true"
              app:layout_collapseMode="pin"
              app:layout_scrollFlags="scroll|enterAlways"
              app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
              />
        </android.support.design.widget.CollapsingToolbarLayout>
      </android.support.design.widget.AppBarLayout>

      <ProgressBar
          android:id="@id/progress_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          app:visibility="@{viewModel.progressVisibility}"
          style="@style/Widget.AppCompat.ProgressBar"
          />

      <android.support.v7.widget.RecyclerView
          android:id="@id/main_rv_transaction_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="@dimen/space.small"
          app:layout_behavior="@string/appbar_scrolling_view_behavior"
          app:visibility="@{viewModel.transactionsVisibility}"
          />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@id/drawer_main_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/include_drawer_main_header"
        app:menu="@menu/menu_drawer_main"
        />

  </android.support.v4.widget.DrawerLayout>
</layout>